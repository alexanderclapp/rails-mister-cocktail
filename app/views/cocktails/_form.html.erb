<div class="container">
  <div class="row">
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.error_notification %>
      <div class="col-xs-6 col-sm-offset-2">
        <div class="form-inputs">
          <%= f.input :name %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-offset-2">
        <div class="form-inputs">
          <%= f.input :photo, as: :attachinary %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-offset-2">
        <div class="form-inputs">
          <%= f.input :background_photo, as: :attachinary %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-offset-2">
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
