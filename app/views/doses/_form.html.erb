 <div class="container">
  <div class="row">

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.error_notification %>
      <div class="col-xs-6 col-sm-offset-2">
        <div class="form-inputs">
          <%= f.association :ingredient %>
          <%= f.input :description %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-offset-2">
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>

